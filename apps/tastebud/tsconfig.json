{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "types": ["vite/client", "node"],
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "vite-env.d.ts",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "vite.config.ts",
    "jest.config.mjs",
    "postcss.config.js",
    "tailwind.config.js",
    "eslint.config.js",
    ".prettierrc.js"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
