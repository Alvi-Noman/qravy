{
  "extends": "@qravy/config/tsconfig-preset/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "types": [
      "vite/client",
      "vitest/globals",
      "node",
      "@testing-library/jest-dom"
    ],
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite.config.ts",
    "jest.config.mjs",
    "postcss.config.js",
    "tailwind.config.js",
    "eslint.config.js",
    ".prettierrc.js"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
