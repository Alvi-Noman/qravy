# The port where storefront-host will run
PORT=8090

# storefront-host (container) → Vite (host)
# Use host.docker.internal so the container can reach your host dev server.
TASTEBUD_DEV_URL=http://host.docker.internal:3007

# storefront-host (container) → api-gateway (container) over Docker network
GATEWAY_URL=https://api-gateway:8080

# storefront-host (container) → ai-waiter-service (container) over Docker network
# or localhost:7071 when running locally outside Docker
AI_WAITER_URL=http://ai-waiter-service:7071

# Allowed browser origins during dev (Vite + storefront-host)
CORS_ORIGIN=http://localhost:3007,https://localhost:3007,http://localhost:8090,https://localhost:8090
